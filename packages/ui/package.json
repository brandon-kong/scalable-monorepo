		"@types/react": "catalog:react19",
		"depcheck": "catalog:",
		"typescript": "5.8.2"
	},
	"dependencies": {
		"@tailwindcss/postcss": "catalog:",
		"class-variance-authority": "^0.7.1",
		"react": "catalog:react19",
		"tailwind-merge": "^3.2.0"
	}
